<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:id="@+id/cardView"
    app:cardElevation="4dp"
    android:layout_margin="8dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/location_image"
            android:layout_width="match_parent"
            android:layout_height="192dp"
            android:scaleType="centerCrop"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:id="@+id/location_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/location_designation_label"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textSize="24sp"
            android:background="#A0000000"
            android:textColor="@android:color/secondary_text_dark"
            android:text="Location Name"/>
        <TextView
            android:id="@+id/location_designation_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/location_image"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:lineSpacingExtra="2dp"
            android:text="Designation" />
        <TextView
            android:id="@+id/location_designation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Site of Special Scientific Interest (GB)"
            android:layout_below="@+id/location_designation_label"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:textColor="@android:color/secondary_text_light"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />

        <TextView
            android:id="@+id/location_area_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/location_designation"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:lineSpacingExtra="2dp"
            android:text="Reported Area KMÂ²" />
        <TextView
            android:id="@+id/location_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.4999"
            android:layout_below="@+id/location_area_label"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:textColor="@android:color/secondary_text_light"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />

        <TextView
            android:id="@+id/location_cover_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/location_area"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:lineSpacingExtra="2dp"
            android:text="Type of Land Cover" />
        <TextView
            android:id="@+id/location_cover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="80% Urban, 20% Marine"
            android:layout_below="@+id/location_cover_label"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:textColor="@android:color/secondary_text_light"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>